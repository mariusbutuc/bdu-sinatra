%footer{ :role => 'contentinfo' }
  .navbar.navbar-inverse.navbar-fixed-bottom
    .navbar-inner
      .container
        %ul.nav.pull-right
          - pages = [ 'faq', 'contact', 'about us', 'legal', 'bug reports' ]
          - pages.each do |page|
            - case page
            - when 'faq'
              %li
                %a{:href => "/#{page}"}#{page.upcase}
              %li.divider-vertical
            - when 'about us'
              %li
                %a{:href => "/about"}#{page.capitalize}
              %li.divider-vertical
            - when 'bug reports'
              %li
                %a{:href => "/bugs"}#{page.capitalize}
              %li.divider-vertical
            - when pages.last
              %li
                %a{:href => "/#{page}"}#{page.capitalize}
            - else
              %li
                %a{:href => "/#{page}"}#{page.capitalize}
              %li.divider-vertical
